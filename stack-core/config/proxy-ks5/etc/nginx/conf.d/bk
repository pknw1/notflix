server {
	server_name download.pknw1.co.uk download.pknw1plex.co.uk; # This is just an invalid value which will never trigger on a real hostname.
	listen 80;
	access_log /var/log/nginx/access.log vhost;
	root /host;
#	auth_basic "Administrator Login";
#auth_basic_user_file /var/www/.htpasswd;

error_page 400 401 402 403 404 405 406 407 408 409 410 411 412 413 414 415 416 417 418 420 422 423 424 426 428 429 431 444 449 450 451 500 501 502 503 504 505 506 507 508 509 510 511 /error/error.html;

	location /error {
		internal;
		root /host/mnt;
}
	
	location / {
		add_before_body /var/www/pknw1plex.co.uk/before.txt;
		add_after_body /var/www/pknw1plex.co.uk/after.txt;
		autoindex on;
	}

	location /download {
		deny all;
		return 301 https://www.pknw1plex.co.uk/error.html;
	}
       location /mnt/cdrom {
                deny all;
                return 301 https://www.pknw1plex.co.uk/error.html;
        }
       location /mnt/ovh {
                deny all;
                return 301 https://www.pknw1plex.co.uk/error.html;
        }
       location /mnt/software-enc {
                deny all;
                return 301 https://www.pknw1plex.co.uk/error.html;
        }
       location /mnt/xxx {
                deny all;
                return 301 https://www.pknw1plex.co.uk/error.html ;
        }
       location /mnt/xxx-enc {
                deny all;
                return 301 https://www.pknw1plex.co.uk/error.html;
        }
}


